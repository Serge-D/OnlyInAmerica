{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1 class="p-2">Mon Profil Utilisateur</h1>
        <div class="row">
            <div class="col-md-3">
                {% include '/components/_menuProfil.html.twig' %}
            </div>
            <div class="col-md-9">
                <h5>Mes adresses</h5>
                {{ form_start(adressForm) }}
                <div class="row">
                    <div class="col-md-6">{{ form_row(adressForm.firstname) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.lastname) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.address) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.zipcode) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.city) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.country) }}</div>
                    <div class="col-md-6">{{ form_row(adressForm.phone) }}</div>
                </div>
                {{ form_end(adressForm) }}
            </div>
        </div>
    </div>
{% endblock %}