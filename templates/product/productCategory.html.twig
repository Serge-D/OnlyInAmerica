{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="display-3 mb-5 text-center">{{ category.name }}</h1>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in category.products %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
                            <h5 class="card-title text-center">{{ product.name }}</h5>
                            <div class="text-center">
                                {{ product.priceWt|price }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_product_productdetails', {'slug': product.slug})}}" class="btn btn-dark w-100">Description</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-danger">
                    Pas de produit pour le moment
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

