{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h1>{{ product.name }}</h1>
                <p>{{ product.description }}</p>
                <div class="mt-3">
                    <button class="btn btn-dark">Ajouter aux favoris</button>
                    <button class="btn btn-dark">Commentaires</button>
                    <button class="btn btn-dark">RÃ©server</button>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col">
                <h2>Commentaires</h2>
                {% if product.comments is empty %}
                    <p>Aucun commentaire pour le moment.</p>
                {% else %}
                    <ul class="list-group">
                        {% for comment in product.comments %}
                            <li class="list-group-item">{{ comment.content }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

